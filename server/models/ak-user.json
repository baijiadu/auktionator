{
  "name": "AKUser",
  "plural": "ak-users",
  "base": "AKPersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "wx_openid": {
      "type": "string",
      "description": "微信用户openid"
    },
    "wx_unionid": {
      "type": "string",
      "description": "微信用户unionid"
    },
    "username": {
      "type": "string",
      "description": "用户名，用于登陆"
    },
    "password": {
      "type": "string",
      "description": "密码，用于登陆"
    },
    "nickname": {
      "type": "string",
      "description": "用户昵称"
    },
    "realname": {
      "type": "string",
      "description": "真实姓名"
    },
    "avatar": {
      "type": "string",
      "description": "头像"
    },
    "tel": {
      "type": "string",
      "description": "手机号"
    },
    "identity": {
      "type": "number",
      "description": "用户身份，0（普通用户）、1（卖家）、2（拍卖师）",
      "default": 0
    },
    "gender": {
      "type": "boolean",
      "description": "性别：true（男）、false（女）"
    },
    "country": {
      "type": "string",
      "description": "所在国家"
    },
    "language": {
      "type": "string",
      "description": "语言"
    },
    "province": {
      "type": "string",
      "description": "所在省"
    },
    "city": {
      "type": "string",
      "description": "所在市"
    },
    "autograph": {
      "type": "string",
      "description": "个性签名"
    },
    "score": {
      "type": "number",
      "description": "积分",
      "default": 0
    }
  },
  "hidden": ["password", "verificationToken"],
  "validations": [],
  "relations": {
    "ownerProducts": {
      "type": "hasMany",
      "model": "AKProduct",
      "foreignKey": "ownerId"
    },
    "auktionatorProducts": {
      "type": "hasMany",
      "model": "AKProduct",
      "foreignKey": "auktionatorId"
    },
    "biddenProducts": {
      "type": "hasMany",
      "model": "AKProduct",
      "foreignKey": "bidderId",
      "through": "AKProductBid"
    },
    "auktionatorGames": {
      "type": "hasMany",
      "model": "AKGame",
      "foreignKey": "auktionatorId"
    },
    "buyerOrders": {
      "type": "hasMany",
      "model": "AKOrder",
      "foreignKey": "buyerId"
    },
    "sellerOrders": {
      "type": "hasMany",
      "model": "AKOrder",
      "foreignKey": "sellerId"
    },
    "auktionatorOrders": {
      "type": "hasMany",
      "model": "AKOrder",
      "foreignKey": "auktionatorId"
    },
    "buyerTickets": {
      "type": "hasMany",
      "model": "AKGameTicket",
      "foreignKey": "buyerId"
    },
    "helpBuyerTickets": {
      "type": "hasMany",
      "model": "AKGameTicket",
      "foreignKey": "helpBuyerId"
    }
  },
  "acls": [],
  "methods": {}
